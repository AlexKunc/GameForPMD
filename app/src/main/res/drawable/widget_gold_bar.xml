<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- золотой градиент -->
    <gradient
        android:startColor="#FFD700"
        android:centerColor="#FFC107"
        android:endColor="#FFA000"
        android:angle="270"/>

    <!-- скруглённые углы -->
    <corners android:radius="12dp"/>

    <!-- лёгкая тень/обводка -->
    <stroke
        android:width="2dp"
        android:color="#B8860B" />

    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp"/>
</shape>
